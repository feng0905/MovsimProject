<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE SCENARIO SYSTEM "multiModelTrafficSimulatorInput.dtd">
<!-- (c) Arne Kesting, Ralph Germ, Martin Budden, Martin Treiber (2012) -->
<SCENARIO network_filename="ringroad_2lanes.xodr">
    <VEHICLES>

        <VEHICLE label="ACC1" length="6" b_max="40">
            <LONGITUDINAL_MODEL>
                <ACC v0="35" T="1.2" s0="3" s1="2" delta="4" a="1.2"
		     b="2.0" coolness="1"/>
            </LONGITUDINAL_MODEL>
            <LANE_CHANGE_MODEL eur_rules="true" crit_speed_eur="20">
                <!-- b_safe < b_max to avoid crashed -->
                <MOBIL b_safe="30.0" s_min="2.0" threshold="0.05" 
                       bias_right="0.1" politeness="0."/>
            </LANE_CHANGE_MODEL>
        </VEHICLE>

       
    </VEHICLES>
    <SIMULATION dt="0.2" duration="72000" fixed_seed="true" seed="42" crash_exit="false">
        <TRAFFIC_COMPOSITION>
            <VEHICLE_TYPE label="ACC1" fraction="1.0" relative_v0_randomization="0.0"/>
        </TRAFFIC_COMPOSITION>

        <ROAD id="43"> <!-- freeway -->
            <INITIAL_CONDITIONS/>
            <TRAFFIC_SOURCE>
                <INFLOW t="0" q_per_hour="1500" v="24"/>
                <INFLOW t="50" q_per_hour="1500" v="24"/>
                <INFLOW t="60" q_per_hour="2000" v="24"/>
                <INFLOW t="100" q_per_hour="1500" v="24"/>
                <INFLOW t="100" q_per_hour="200" v="24"/>
                <INFLOW t="110" q_per_hour="200" v="24"/>
                <INFLOW t="120" q_per_hour="2000" v="24"/>
                <INFLOW t="150" q_per_hour="1000" v="24"/>
                <INFLOW t="160" q_per_hour="0" v="24"/>
            </TRAFFIC_SOURCE>
            <SPEED_LIMITS/>
            <TRAFFIC_LIGHTS/>
            <DETECTORS/>
        </ROAD>
        <OUTPUT/>
    </SIMULATION>
</SCENARIO>
